    <Button name="$parentExpandButton" parent="PetJournal" hide="true">
        <Size x="32" y="32"/>
        <Anchors>
            <Anchor point="TOPRIGHT" x="-2" y="-21"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                self:SetFrameLevel(self:GetParent():GetFrameLevel() + 2)
                PetJournal.HealPetButton:SetPoint("BOTTOMRIGHT", PetJournal, "TOPLEFT", PANEL_INSET_LEFT_OFFSET + PetJournal.LeftInset:GetWidth() + 20 + PetJournal.RightInset:GetWidth() - 36, PANEL_INSET_ATTIC_OFFSET + 1)
            </OnLoad>
            <OnClick>
                if (PetJournal.Expanded) then
                    -- SetCVar("characterFrameCollapsed", "1")
                    PlaySound("igCharacterInfoClose")
                    PetBattleTeams_Collapse()
                else
                    -- SetCVar("characterFrameCollapsed", "0")
                    PlaySound("igCharacterInfoOpen")
                    PetBattleTeams_Expand()
                end
                if (GameTooltip:GetOwner() == self) then
                    self:GetScript("OnEnter")(self)
                end
            </OnClick>
            <OnEnter>
                GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                if (PetJournal.Expanded) then
                    GameTooltip:SetText(HIGHLIGHT_FONT_COLOR_CODE.."COLLAPSE"..FONT_COLOR_CODE_CLOSE)
                else
                    GameTooltip:SetText(HIGHLIGHT_FONT_COLOR_CODE.."EXPAND"..FONT_COLOR_CODE_CLOSE)
                end
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
        </Scripts>
        <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
        <PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
        <DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Disabled"/>
        <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
    </Button>
